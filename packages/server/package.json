{
    "name": "@app/server",
    "version": "0.0.0",
    "main": "src/index.ts",
    "type": "module",
    "scripts": {
        "dev": "bun run --watch src/index.ts",
        "db:push": "drizzle-kit push",
        "db:studio": "drizzle-kit studio",
        "db:generate": "drizzle-kit generate",
        "db:migrate": "drizzle-kit migrate",
        "auth:generate": "bun x @better-auth/cli@latest generate --config ./src/lib/auth/config.ts",
        "start": "bun run db:migrate && bun src/index.ts"
    },
    "dependencies": {
        "@app/shared": "workspace:*",
        "@hono/zod-validator": "^0.7.5",
        "better-auth": "^1.4.5",
        "dotenv": "^17.2.3",
        "drizzle-orm": "^0.44.7",
        "hono": "^4.10.7",
        "pg": "^8.16.3",
        "postgres": "^3.4.7",
        "zod": "^4.1.13"
    },
    "devDependencies": {
        "@types/pg": "^8.15.6",
        "bun-types": "latest",
        "drizzle-kit": "^0.31.7",
        "tsx": "^4.21.0",
        "typescript": "^5.4.0"
    }
}
