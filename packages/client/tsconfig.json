{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "isolatedModules": true,
        "jsx": "react-jsx",
        "types": ["vite/client"],
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"],
            "@shared/*": ["../shared/src/*"]
        }
    },
    "include": ["src"],
    "references": [
        { "path": "./tsconfig.node.json" },
        { "path": "../shared" },
        { "path": "../server" }
    ]
}
